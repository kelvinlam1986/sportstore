@model  CartRecordViewModel

<tr id="row_@Model.Id">
    <td>
        <div class="product-cell-detail">
            <img src="@Url.Content($"/images/{Model.ProductImageLarge}")" class="pull-left" />
            <a class="h5" asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">
                @Html.DisplayFor(x => x.ModelName)
            </a>
        </div>
        <div class="small">@Html.DisplayFor(x => x.CategoryName)</div>
        <div class="small text-muted">@Html.DisplayFor(x => x.Description)</div>
    </td>
    <td class="text-right">
        @Html.DisplayFor(x => x.CurrentPrice)
    </td>
    <td class="text-right cart-quantity-row">
        @Html.EditorForModel()
    </td>
    <td class="text-right">
        @Html.DisplayFor(x => x.UnitsInStock)
    </td>
    <td class="text-right cart-quantity-row">
        <span id="rawTotal_@Model.ProductId" class="hidden">@Model.LineItemTotal</span>
        <span id="total_@Model.ProductId">@Html.DisplayFor(x => x.LineItemTotal)</span>
    </td>
</tr>